#page-content

  %h3.heading
    = page_title! 'Reinos'

  - if current_admin
    .admin.head
      = link_to 'New Producto', new_reino_categoria_subcategoria_tipo_producto_path(@tipo.subcategoria.categoria.reino, @tipo.subcategoria.categoria, @tipo.subcategoria, @tipo), class: 'button-create'

  .content.presentacion
    = image_tag @tipo.imagen_url(:vertical) if @tipo.imagen?
    - @productos.each do |producto|

      .textual-content
        %h3.heading
          = link_to producto.nombre, reino_categoria_subcategoria_tipo_producto_path(producto.tipo.subcategoria.categoria.reino, producto.tipo.subcategoria.categoria, producto.tipo.subcategoria, producto.tipo, producto)

        = paragraph(producto.descripcion)
        - if current_admin
          .admin-iterate
            = link_to 'Editar', edit_reino_categoria_subcategoria_tipo_producto_path(producto.tipo.subcategoria.categoria.reino, producto.tipo.subcategoria.categoria, producto.tipo.subcategoria, producto.tipo, producto)
            = link_to 'Eliminar', reino_categoria_subcategoria_tipo_producto_path(producto.tipo.subcategoria.categoria.reino, producto.tipo.subcategoria.categoria, producto.tipo.subcategoria, producto.tipo, producto), :method => :delete, :data => { :confirm => 'Are you sure?' }
