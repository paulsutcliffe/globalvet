= form_for @noticia do |f|
  - if @noticia.errors.any?
    #error_explanation
      %h2= "#{pluralize(@noticia.errors.count, "error")} prohibited this noticia from being saved:"
      %ul
        - @noticia.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :titulo
    = f.text_field :titulo
  .field
    = f.label :contenido
    = f.text_area :contenido
  .field
    = f.label :imagen
    = f.text_field :imagen
  .actions
    = f.submit 'Save'
