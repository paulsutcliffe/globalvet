= form_for [@reino, @categoria], :html => { multipart: true } do |f|
  - if @categoria.errors.any?
    #error_explanation
      %h2= "#{pluralize(@categoria.errors.count, "error")} prohibited this categoria from being saved:"
      %ul
        - @categoria.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nombre
    = f.text_field :nombre
  .field
    = f.label :imagen
    = f.file_field :imagen
  .actions
    = f.submit 'Guardar'
