#page-content
  
  %h3.heading
    = page_title! 'Reinos'

  - if current_admin
    .admin.head
      = link_to 'New Categoria', new_reino_categoria_path(@reino), class: 'button-create'

  .content.presentacion
    - @categorias.each do |categoria|
    
      = link_to image_tag(categoria.imagen), reino_categoria_subcategorias_path(categoria.reino, categoria)
      .textual-content
        %h3.heading
          = link_to categoria.nombre, reino_categoria_subcategorias_path(categoria.reino, categoria)
        - if current_admin
          .admin-iterate
            = link_to 'Edit', edit_reino_categoria_path(categoria.reino, categoria)
            = link_to 'Destroy', reino_categoria_path(categoria.reino, categoria), :method => :delete, :data => { :confirm => 'Are you sure?' }
 

%table{style: 'display: none'}
  %tr
    %th Nombre
    %th Imagen
    %th
    %th
    %th

  - @categorias.each do |categoria|
    %tr
      %td= categoria.nombre
      %td= categoria.imagen
      %td= link_to 'Show', reino_categoria_subcategorias_path(categoria.reino, categoria)
      %td= link_to 'Edit', edit_reino_categoria_path(categoria.reino, categoria)
      %td= link_to 'Destroy', reino_categoria_path(categoria.reino, categoria), :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= #link_to 'New Categoria', new_reino_categoria_path(@reino)
