#page-content

  %h3.heading
    = page_title! 'Reinos'

  - if current_admin
    .admin.head
      = link_to 'Nueva Categoria', new_reino_categoria_path(@reino), class: 'button-create'

  .content.presentacion
    = image_tag @reino.imagen_url(:vertical) if @reino.imagen?
    - @categorias.each do |categoria|

      .textual-content
        %h3.heading
          = link_to categoria.nombre, reino_categoria_subcategorias_path(categoria.reino, categoria)
        - if current_admin
          .admin-iterate
            = link_to 'Editar', edit_reino_categoria_path(categoria.reino, categoria)
            = link_to 'Eliminar', reino_categoria_path(categoria.reino, categoria), :method => :delete, :data => { :confirm => 'Are you sure?' }
