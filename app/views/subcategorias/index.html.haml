#page-content

  %h3.heading
    = page_title! 'Reinos'

  - if current_admin
    .admin.head
      = link_to 'Nueva Subcategoria', new_reino_categoria_subcategoria_path(@categoria.reino, @categoria), class: 'button-create'

  .content.presentacion
    = image_tag @categoria.imagen_url(:vertical) if @categoria.imagen?
    - @subcategorias.each do |subcategoria|

      .textual-content
        %h3.heading
          = link_to subcategoria.nombre, reino_categoria_subcategoria_tipos_path(subcategoria.categoria.reino, subcategoria.categoria, subcategoria)
        - if current_admin
          .admin-iterate
            = link_to 'Editar', edit_reino_categoria_subcategoria_path(subcategoria.categoria.reino, subcategoria.categoria, subcategoria)
            = link_to 'Eliminar', reino_categoria_subcategoria_path(subcategoria.categoria.reino, subcategoria.categoria, subcategoria), :method => :delete, :data => { :confirm => 'Are you sure?' }
