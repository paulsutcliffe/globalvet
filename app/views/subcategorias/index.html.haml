#page-content
  
  %h3.heading
    = page_title! 'Reinos'

  - if current_admin
    .admin.head
      = link_to 'New Subcategoria', new_reino_categoria_subcategoria_path(@categoria.reino, @categoria), class: 'button-create'

  .content.presentacion
    - @subcategorias.each do |subcategoria|
      = link_to image_tag(subcategoria.imagen), reino_categoria_subcategoria_tipos_path(subcategoria.categoria.reino, subcategoria.categoria, subcategoria)

      .textual-content
        %h3.heading
          = link_to subcategoria.nombre, reino_categoria_subcategoria_tipos_path(subcategoria.categoria.reino, subcategoria.categoria, subcategoria)
        - if current_admin
          .admin-iterate
            = link_to 'Edit', edit_reino_categoria_subcategoria_path(subcategoria.categoria.reino, subcategoria.categoria, subcategoria)
            = link_to 'Destroy', reino_categoria_subcategoria_path(subcategoria.categoria.reino, subcategoria.categoria, subcategoria), :method => :delete, :data => { :confirm => 'Are you sure?' }


%table{style: 'display: none'}
  %tr
    %th Nombre
    %th Imagen
    %th
    %th
    %th

  - @subcategorias.each do |subcategoria|
    %tr
      %td= subcategoria.nombre
      %td= subcategoria.imagen
      %td= link_to 'Show', reino_categoria_subcategoria_tipos_path(subcategoria.categoria.reino, subcategoria.categoria, subcategoria)
      %td= link_to 'Edit', edit_reino_categoria_subcategoria_path(subcategoria.categoria.reino, subcategoria.categoria, subcategoria)
      %td= link_to 'Destroy', reino_categoria_subcategoria_path(subcategoria.categoria.reino, subcategoria.categoria, subcategoria), :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= #link_to 'New Subcategoria', new_reino_categoria_subcategoria_path(@categoria.reino, @categoria)
