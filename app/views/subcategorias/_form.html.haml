= form_for @subcategoria, :html => { multipart: true } do |f|
  - if @subcategoria.errors.any?
    #error_explanation
      %h2= "#{pluralize(@subcategoria.errors.count, "error")} prohibited this subcategoria from being saved:"
      %ul
        - @subcategoria.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nombre
    = f.text_field :nombre
  .field
    = f.label :imagen
    = f.file_field :imagen
  .actions
    = f.submit 'Save'
