#page-content

  %h3.heading
    = page_title! @reino.nombre + ' > ' + @categoria.nombre + ' > ' + @subcategoria.nombre + ' > Tipos'

  - if current_admin
    .admin.head
      = link_to 'Nuevo Tipo', new_reino_categoria_subcategoria_tipo_path(@reino, @categoria, @subcategoria), class: 'button-create'

  .content.presentacion
    = image_tag @subcategoria.imagen_url(:vertical) if @subcategoria.imagen?
    - @tipos.each do |tipo|

      .textual-content
        %h3.heading
          = link_to tipo.nombre, reino_categoria_subcategoria_tipo_productos_path(@reino, @categoria, @subcategoria, tipo)

        - if current_admin
          .admin-iterate
            = link_to 'Editar', edit_reino_categoria_subcategoria_tipo_path(@reino, @categoria, @subcategoria, tipo), class: 'button-update'
            = link_to 'Eliminar', reino_categoria_subcategoria_tipo_path(@reino, @categoria, @subcategoria, tipo), :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'button-delete'
