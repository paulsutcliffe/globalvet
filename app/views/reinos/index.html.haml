#page-content

  %h1.page-title
    = page_title! 'Productos'

  - if current_admin
    .admin.head
      = link_to 'Nuevo Reino', new_reino_path, class: 'button-create'

  .content.presentacion
    %ul.animal-list
      %li
        = link_to 'Aves', '/reinos/aves/categorias'
      %li
        = link_to 'Porcinos', '/reinos/porcinos/categorias'
      %li
        = link_to 'Bovinos', '/reinos/bovinos/categorias'
      %li
        = link_to 'Equinos', '/reinos/equinos/categorias'
      %li
        = link_to 'Mascotas', '/reinos/mascotas/categorias'
      %li
        = link_to 'Peces', '/reinos/peces/categorias'


    = image_tag('/assets/productos-index.png', class: 'animales-index')

    .textual-content{:style => 'display: none'}
      - @reinos.each do |reino|
        %h3.heading
          = link_to reino.nombre, categorias_reino_path(reino)

        - if current_admin
          .admin.iterate
            = link_to 'Editar', edit_reino_path(reino), class: 'button-update'
            = link_to 'Eliminar', reino, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'button-delete'
