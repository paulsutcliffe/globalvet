= form_for @reino, :html => { multipart: true } do |f|
  - if @reino.errors.any?
    #error_explanation
      %h2= "#{pluralize(@reino.errors.count, "error")} prohibited this reino from being saved:"
      %ul
        - @reino.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nombre
    = f.text_field :nombre
  .field
    = f.label :imagen
    = f.file_field :imagen
  .field
    = f.label :icono
    = f.file_field :icono
  .field
    = f.label :indice
    = f.text_field :indice
  .actions
    = f.submit 'Guardar'
