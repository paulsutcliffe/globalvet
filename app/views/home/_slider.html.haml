#myCarousel.carousel.slide
  %ol.carousel-indicators
    %li{:"data-target" => "#myCarousel", :"data-slide-to" => "0", :class => "active"}
    %li{:"data-target" => "#myCarousel", :"data-slide-to" => "1"}

  <!-- Carousel items -->
  .carousel-inner
    .item.active
      = image_tag 'img-slider.jpg'
      .carousel-caption
        Vacunas agropecuarias
    .item
      = image_tag 'img-slider-2.jpg'
      .carousel-caption
        Vacunas agropecuarias 2

  <!-- Carousel nav -->
  = link_to raw('&lsaquo;'), '#myCarousel', :"data-slide" => 'prev', :class => 'carousel-control left'
  = link_to raw('&rsaquo;'), '#myCarousel', :"data-slide" => 'next', :class => 'carousel-control right'
