
#page-content
  %h1.page-title
    = page_title! 'Marcas Representadas'

  - if current_admin
    .admin.head
      = link_to 'New Marca', new_marca_path, class: 'button-create'

  .content.img-gallery
    - @marcas.each do |marca|
      - if current_admin
        = link_to image_tag(marca.logo_url(:medium), alt: marca.link), edit_marca_path(marca), class: cycle('col-1', 'col-2', 'col-3', 'col-4')
      - else
        = link_to image_tag(marca.logo_url(:medium), alt: marca.link), marca.link, class: cycle('col-1', 'col-2', 'col-3', 'col-4'), target: '_blank'
